// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int        @id @default(autoincrement())
  title       String
  price       String
  categories  Category[]
  description String
  image       String
  categoryId  Int[]
  carts       Cart[]
  cartId      String[]
}

model Category {
  id           Int       @id @default(autoincrement())
  categoryName String
  product      Product[]
}

model Cart {
  id        String    @id @default(uuid())
  user      User      @relation(fields: [userId], references: [id])
  date      DateTime  @updatedAt
  userId    String    @unique
  products  Product[]
  productId Int[]
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  harshedRt String?
  cart      Cart[]

}
